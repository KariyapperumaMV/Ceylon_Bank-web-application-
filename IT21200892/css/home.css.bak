* {box-sizing: border-box;}

.mySlides {display: none;}

img {vertical-align: middle;}


/* Slideshow container */
.slideshow-container {
  width: 760px;
  height:480px;
  position: center;
  margin-left: 208px;
  margin-right: 208px;
  margin-top:10px;
  margin-bottom:0px;
}


/* Number text (1/3 etc) */
.numbertext {
  color: #fff;
  text-align:left;
  font-size: 16px;
  margin-left:20px;
  padding: 8px 12px;
  position: static;
  justify:left;
}

/* The dots/bullets/indicators */
.dot {
	height: 15px;
	width: 15px;
	margin: 2 2px;
	top:px;
	background-color: #bbb;
	border-radius:55%;
	display: inline-block;
	transition: background-color 0.6s ease;
}

.active ,dot:hover{
  background-color: #717171;
}

.fade {
  animation-name: fade;
  animation-duration: 1.5s;
}

@keyframes fade {
  from {opacity: .4} 
  to {opacity: 1}
}
@media only screen and (max-width: 300px) {
  .text {font-size: 11px}
}


/*promo,rates,loan*/
.imgbtn{
  position: relative;
  width: 100%;
  max-width: 360px;
  
}

.imgbtn img {
  width: 100%;
  height: auto;
}

.imgbtn .btn {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  -ms-transform: translate(-50%, -50%);
  background-color: #555;
  color: white;
  font-size: 16px;
  padding: 12px 24px;
  border: none;
  cursor: pointer;
  border-radius: 5px;
  text-align: center;
}

.btn a{
	color:white;
	text-decoration:none;
}

.btn:hover {
  background-color: black;
}

