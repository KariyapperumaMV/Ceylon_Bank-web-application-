							<option value="BOC">BOC</option>
							<option value="NDB">NDB</option>
							<option value="NSB">NSB</option>
							<option value="people">People's Bank</option>
						</select><br>
						
						<b>Recepient Branch :</b><br>
						<input  type="text" name="branch" maxlength="50"  placeholder="Enter Recepient Branch" required>
						<br>
						
						<b>Transfer Amount :</b>
						<input  type="text" name="amount" pattern="[0-9]{2,20}"  placeholder="Enter Transfer Amount" required>
						<br>
						
